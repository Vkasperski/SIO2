package test2048;
import java.util.Scanner;

public class Test2048 
{
	public static void main(String[]args)
	{
		int dimention;
		char chx = '0';
		do
		{
			System.out.print("Dimention du 2048 : ");
			try
			{
				Scanner dim = new Scanner(System.in);
				dimention = dim.nextInt();
				dim.close();
			}
			catch(Exception e)
			{
				System.out.println("Dimention incorect dimention 4 utilisé par défaut!!!");
				dimention = 4;
			}
			TabTuile Game = new TabTuile(dimention);
				do
				{
					Game.popTuiles();
					Game.popTuiles();
					Game.affichTab();
					if(Game.MovePossible())
					{
						System.out.println(" 'g'->Gauche \n 'd'->Droite \n 'b'->Bas \n 'h'->Haut");
						System.out.println(" '1'->reset \n '2'->Nouvelle Partie \n '3'->Quitter \n" );
						Scanner choix = new Scanner(System.in);
						switch (choix.next().charAt(0))
						{
							case '1' :
								Game.reset();
								break;
							case '2' :
								System.out.println("\n\n\n\n");
								break;
							case '3' :
								break;
							case 'g' | 'G' :
								Game.MoveLeft();
								break;
							case 'd' | 'D' :
								Game.MoveRight();
								break;
							case 'h' | 'H' :
								Game.MoveUp();
								break;
							case 'b' | 'B' :
								Game.MoveDown();
								break;
							default :
								System.out.println("Choix non disponible");
								break;
						}
						choix.close();
					}
					else
					{
						System.out.println("Plus de mouvelent disponible");
						chx='2';
					}
				}while(chx!='2');
		}while(chx!='3');
	}
}